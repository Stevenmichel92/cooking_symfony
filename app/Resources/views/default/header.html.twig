    <body id="body">
    <header class="sticky-top"> 
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-12 col-md-6 col-lg-3" >
                    {% image '@AppBundle/Resources/public/images/logo-cooking.png' %}
                        <a href="index"><img src="{{ asset_url }}" alt="logo-cooking" /></a>
                    {% endimage %}
                </div>
               
                <div class="form-inline col-sm-12 col-md-6 col-lg-6" >
                    {{ form_start(form) }}
                         <div class="row">
                            <div class="col-10">
                                {{ form_widget(form.titre, { 'attr': {'class': 'form-control', 'size': '60'} }) }}
                            </div>
                            <div class="col-2">
                                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                            </div>
                        </div>   
                    {{ form_end(form) }}
                </div>
                
                {% if (app.session.get('login') == true) %}
                    <div class="row">
                        <div class="col-6">
                            <strong>Bonjour <a href="compte">{{ app.session.get('login')}}</a></strong>       
                        </div>
                        <div class="col-6">
                            {{ form_start(deconnexion) }}
                                {{ form_widget(deconnexion.save, { 'attr': {'class': 'btn btn-danger'} }) }}
                            {{ form_end(deconnexion) }}
                        </div>
                        <div class="col-6">
                            <a href="depot_recette" class="btn btn-primary" >DÃ©poser votre recette</a>
                        </div>    
                    </div> 
                {% else %}        
                    <div class="col-sm-12 col-md-12 col-lg-3">
                        <div class="row justify-content-center">
                            <div class="col-5">
                                <a href="connexion" class="btn btn-primary">Connexion</a>
                            </div>
                        </div>  
                    </div> 
                {% endif %}
            </div>            
        </div>
    </header>



