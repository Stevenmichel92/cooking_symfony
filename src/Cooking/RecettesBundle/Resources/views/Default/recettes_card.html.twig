<div class="card" style="border-radius:50px">
      <img src="{{ asset('bundles/app/images/recettes/' ~ recette.imagename) }}" width="100" height="100" class="card-img-top" style="border-top-left-radius:50px; border-top-right-radius:50px" alt="{{ recette.imagename }}">
    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal{{ recette.idrecette }}">Voir recette complète</button>

    <div class="card-body couleur_card" style="border-bottom-right-radius:50px; border-bottom-left-radius:50px">
        <h5 class="card-title couleur_card_titre">{{ recette.titre }}</h5>
        <p class="card-text">{{ recette.chapo }}</p> 

          {% if recette.couleur == 'fushia' %}
            <div class="fushia border_radius">
          {% elseif recette.couleur == 'bleuClair' %}
            <div class="bleuClair border_radius">
          {% else %}
            <div class="vertClair border_radius">
          {% endif %}
              {% for membre in membres %}
                {% if membre.idmembre == recette.membre %}
                  <img src="{{ asset('bundles/app/images/gravatars/' ~ membre.imagename) }}" width="50" height="50" alt="{{ membre.imagename}}" style="border-radius:50%">
          
                <strong> Recette proposée par <a href="membre/{{ membre.login }}">{{ membre.login }}</a></strong>
                {% endif %}
              {% endfor %}
        </div>
    </div>
</div>
  
<div class="modal fade" id="exampleModal{{ recette.idrecette }}"  tabindex="-1" role="dialog" aria-labelledby="example{{recette.idrecette}}" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="example{{ recette.idrecette }}">{{ recette.titre }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <img src="{{ asset('bundles/app/images/recettes/' ~ recette.imagename) }}" width="200" alt="{{ recette.imagename }}"><br><br>
            </div>
            <div class="col-12">    
                <i>{{ recette.chapo }}
                </i><br>
                <hr>
                <h4>Préparation</h4>{{ recette.preparation }}<br>
            </div> 

            <div class="col-12">                 
                <h4>Ingrédient</h4>{{ recette.ingredient }}<br>              
            </div>
            <div class="col-12">         
                    <strong>Temps de cuisson </strong>: {{ recette.tempsCuisson }}<br>
                    <strong>Temps de préparation </strong> : {{ recette.tempsPreparation }}><br>
                    <strong>Difficulté </strong> : {{ recette.difficulte }}<br>
                    <strong>Prix </strong> : {{ recette.prix }}<br><br>
            </div>      
            <div class="col-12">  
                {% if recette.couleur == 'fushia' %}
                  <div class="fushia">
                {% elseif recette.couleur == 'bleuClair' %}
                  <div class="bleuClair">
                {% else %}
                  <div class="vertClair">
                {% endif %}

                  {% for membre in membres %}
                   {% if membre.idmembre == recette.membre %}
                      <img src="{{ asset('bundles/app/images/gravatars/' ~ membre.imagename) }}" width="50" height="50" alt="{{ membre.imagename}}" style="border-radius:50%">
                      <strong> Recette proposée par <a href="membre/{{ membre.login }}">{{ membre.login }}</a></strong>
                   {% endif %}
                  {% endfor %}
                </div>
            </div>    
        </div>
      </div>
      <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>



